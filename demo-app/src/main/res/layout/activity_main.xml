<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Mobile SDK"
        android:textColor="#084A7E"
        android:textSize="24dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnCreateUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/transparent"
            android:fontFamily="sans-serif"
            android:gravity="left|center_vertical"
            android:padding="10dp"
            android:text="Create User"
            android:textAllCaps="false"
            android:textColor="#084A7E"
            android:textSize="24dp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btnListUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@color/transparent"
            android:fontFamily="sans-serif"
            android:gravity="left|center_vertical"
            android:padding="10dp"
            android:text="List user &amp; balance"
            android:textAllCaps="false"
            android:textColor="#084A7E"
            android:textSize="24dp" />

        <Button
            android:id="@+id/btnTransDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@color/transparent"
            android:fontFamily="sans-serif"
            android:gravity="left|center_vertical"
            android:padding="10dp"
            android:text="Transaction details by type"
            android:textAllCaps="false"
            android:textColor="#084A7E"
            android:textSize="24dp" />

        <Button
            android:id="@+id/btnMakeTrans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@color/transparent"
            android:fontFamily="sans-serif"
            android:gravity="left|center_vertical"
            android:padding="10dp"
            android:text="Make transaction"
            android:textAllCaps="false"
            android:textColor="#084A7E"
            android:textSize="24dp" />


    </LinearLayout>

</RelativeLayout>
